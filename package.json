{
  "name": "scramjet-csi-dev",
  "version": "0.10.0-pre.3",
  "private": true,
  "description": "A development repo for Scramjet CSI, a container supervisor that allows deployment, execution and monitoring of any application based on a simple interface.",
  "main": "index.js",
  "bic": {
    "only": [
      "packages"
    ],
    "skip": [
      "template"
    ]
  },
  "bin": {
    "csi-supervisor": "bin/scramjet-csi-supervisor"
  },
  "scripts": {
    "build": "yarn build:packages",
    "build:all": "yarn build:all-packages && yarn build:docker",
    "build:packages": "lerna exec bic --parallel",
    "build:all-packages": "lerna run build",
    "build:docker": "lerna run build:docker",
    "build:docs": "lerna run build:docs",
    "clean:root": "rm -rf ./dist/",
    "clean:modules": "find -name node_modules -prune -exec rm -rf {} ';' 2> /dev/null",
    "clean": "lerna run clean && yarn clean:root",
    "prepack": "yarn pack:pre",
    "pack:pre": "LOCAL_PACKAGES=true lerna run prepack",
    "pack:pub": "yarn clean:root && FLAT_PACKAGES=true MAKE_PUBLIC=true NO_INSTALL=true lerna run prepack",
    "packseq": "lerna run packseq",
    "publish:dist": "find dist/ -iname package.json -not -wholename '*node_modules*' -execdir yarn publish --no-git-tag-version --non-interactive \\;",
    "lint": "eslint . --ext .ts",
    "lint:dedupe": "scripts/dedupe.js",
    "watch": "lerna run watch",
    "install:clean": "yarn clean && yarn clean:modules && yarn install",
    "postinstall": "lerna exec yarn && lerna link",
    "bump:images": "CURR_VER=$(jq -r .version < package.json) && sed -i \"s|${CURR_VER}|$(npx semver -i prerelease ${CURR_VER})|\" ./packages/csi-config/src/image-config.json",
    "bump:packages": "CURR_VER=$(jq -r .version < package.json) && yarn version --new-version $(npx semver -i prerelease ${CURR_VER})",
    "prebump:packages": "git diff --exit-code --quiet && lerna version -y --no-git-tag-version $(npx semver -i prerelease $(jq -r .version < package.json)) && git add .",
    "test": "yarn test:parallel && yarn test:bdd",
    "test:packages": "lerna run test",
    "test:parallel": "lerna run test --parallel",
    "test:bdd": "yarn --cwd=./bdd run test:bdd",
    "version": "yarn bump:images && yarn bump:packages",
    "postversion": "yarn pack:pub && yarn publish:dist && git push --follow-tags"
  },
  "author": "Scramjet <open-source@scramjet.org>",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "build-if-changed": "^1.5.5",
    "eslint": "^7.18.0",
    "eslint-plugin-import": "^2.23.3",
    "eslint-to-editorconfig": "^2.0.0",
    "glob": "^7.1.7",
    "husky": "4.3.8",
    "lerna": "^3.22.1",
    "semver": "^7.3.5",
    "tar": "^6.1.0",
    "ts-loader": "^8.0.15",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "workspaces": {
    "packages": [
      "packages/**",
      "bdd"
    ]
  },
  "publishConfig": {
    "registry": "https://repo.int.scp.ovh/repository/npm-scramjet/",
    "access": "restricted"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint"
    }
  },
  "dependencies": {
    "scramjet": "^4.35.15"
  }
}
