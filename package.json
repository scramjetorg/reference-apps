{
  "name": "scramjet-csi-dev",
  "version": "independent",
  "private": true,
  "description": "A development repo for Scramjet CSI, a container supervisor that allows deployment, execution and monitoring of any application based on a simple interface.",
  "main": "index.js",
  "bin": {
    "csi-supervisor": "bin/scramjet-csi-supervisor"
  },
  "scripts": {
    "build": "lerna run build",
    "clean:root": "rimraf -rf ./dist/",
    "clean": "lerna run clean && yarn clean:root",
    "update": "",
    "prepack": "lerna run prepack",
    "lint": "eslint . --ext .ts",
    "watch": "lerna run watch",
    "postinstall": "lerna bootstrap",
    "test": "lerna run test",
    "test:parallel": "lerna run test --parallel",
    "test-bdd": "cd bdd && yarn install && yarn run test-bdd"
  },
  "author": "Scramjet <open-source@scramjet.org>",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.18.0",
    "lerna": "^3.22.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.15",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  }
}
